{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "primary",
          "color": "#1F3D58",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#2a4a6a",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#EB512F",
          "name": "Accent"
        },
        {
          "slug": "accent-hover",
          "color": "#d4472a",
          "name": "Accent Hover"
        },
        {
          "slug": "background",
          "color": "#F8F8F8",
          "name": "Background"
        },
        {
          "slug": "background-alt",
          "color": "#f5f5f5",
          "name": "Background Alt"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "text",
          "color": "#1F3D58",
          "name": "Text"
        },
        {
          "slug": "text-muted",
          "color": "#5a6a7a",
          "name": "Text Muted"
        },
        {
          "slug": "text-light",
          "color": "rgba(255,255,255,0.9)",
          "name": "Text Light"
        },
        {
          "slug": "border",
          "color": "#e5e5e5",
          "name": "Border"
        }
      ],
      "gradients": [
        {
          "slug": "hero-overlay",
          "gradient": "linear-gradient(180deg, rgba(31,61,88,0.4) 0%, rgba(31,61,88,0.7) 100%)",
          "name": "Hero Overlay"
        },
        {
          "slug": "accent-gradient",
          "gradient": "linear-gradient(135deg, #EB512F 0%, #ff6b4a 100%)",
          "name": "Accent Gradient"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "lineHeight": true,
      "textDecoration": true,
      "textTransform": true,
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "'Outfit', sans-serif",
          "slug": "heading",
          "name": "Outfit"
        },
        {
          "fontFamily": "'Questrial', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
          "slug": "body",
          "name": "Questrial"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "13px",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "16px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "18px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "24px",
          "name": "X-Large"
        },
        {
          "slug": "xx-large",
          "size": "36px",
          "name": "XX-Large"
        },
        {
          "slug": "huge",
          "size": "clamp(36px, 5vw, 56px)",
          "name": "Huge"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "customSpacingSize": true,
      "spacingSizes": [
        {
          "slug": "10",
          "size": "8px",
          "name": "1"
        },
        {
          "slug": "20",
          "size": "16px",
          "name": "2"
        },
        {
          "slug": "30",
          "size": "24px",
          "name": "3"
        },
        {
          "slug": "40",
          "size": "32px",
          "name": "4"
        },
        {
          "slug": "50",
          "size": "48px",
          "name": "5"
        },
        {
          "slug": "60",
          "size": "64px",
          "name": "6"
        },
        {
          "slug": "70",
          "size": "80px",
          "name": "7"
        },
        {
          "slug": "80",
          "size": "120px",
          "name": "8"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "slug": "none",
          "shadow": "none",
          "name": "None"
        },
        {
          "slug": "small",
          "shadow": "0 1px 3px rgba(31,61,88,0.08), 0 1px 2px rgba(31,61,88,0.06)",
          "name": "Small"
        },
        {
          "slug": "medium",
          "shadow": "0 4px 6px -1px rgba(31,61,88,0.08), 0 2px 4px -1px rgba(31,61,88,0.04)",
          "name": "Medium"
        },
        {
          "slug": "large",
          "shadow": "0 10px 15px -3px rgba(31,61,88,0.08), 0 4px 6px -2px rgba(31,61,88,0.04)",
          "name": "Large"
        },
        {
          "slug": "xl",
          "shadow": "0 20px 25px -5px rgba(31,61,88,0.1), 0 10px 10px -5px rgba(31,61,88,0.04)",
          "name": "XL"
        },
        {
          "slug": "card",
          "shadow": "0 2px 8px rgba(31,61,88,0.06), 0 8px 24px rgba(31,61,88,0.08)",
          "name": "Card"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "fontWeight": "400",
      "lineHeight": "1.6"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      },
      "blockGap": "var(--wp--preset--spacing--30)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--huge)",
          "fontWeight": "700",
          "lineHeight": "1.1",
          "letterSpacing": "-0.02em"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.01em"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--accent)",
          "text": "#ffffff"
        },
        "border": {
          "radius": "8px",
          "width": "0"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--body)",
          "fontSize": "15px",
          "fontWeight": "600",
          "letterSpacing": "0.01em"
        },
        "spacing": {
          "padding": {
            "top": "14px",
            "right": "28px",
            "bottom": "14px",
            "left": "28px"
          }
        },
        "shadow": "0 2px 4px rgba(235,81,47,0.2)",
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent-hover)",
            "text": "#ffffff"
          }
        },
        ":focus": {
          "color": {
            "background": "var(--wp--preset--color--accent-hover)"
          },
          "outline": {
            "width": "2px",
            "style": "solid",
            "color": "var(--wp--preset--color--accent)",
            "offset": "2px"
          }
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--accent)"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent-hover)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "border": {
              "width": "2px",
              "color": "var(--wp--preset--color--accent)"
            },
            "color": {
              "background": "transparent",
              "text": "var(--wp--preset--color--accent)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--accent)",
                "text": "#ffffff"
              }
            }
          }
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "15px",
          "fontWeight": "500"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--primary)"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--accent)"
              }
            }
          }
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "width": "4px",
            "color": "var(--wp--preset--color--accent)"
          }
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--30)"
          }
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "page-configurator",
      "title": "Configurator",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-over-ons",
      "title": "Over Ons",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-contact",
      "title": "Contact",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-glazen-schuifwand",
      "title": "Glazen Schuifwand",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-steellook",
      "title": "Steellook",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-legal",
      "title": "Legal",
      "postTypes": [
        "page"
      ]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
